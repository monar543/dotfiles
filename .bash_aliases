# System
alias df="df -h"
alias du="du -h"

# Editors
alias v="vim"
alias e="emacs -nw"

# Tmux
alias tm="tmux set -g mode-mouse off"
alias t="tmux"

# Grep | find | search
alias grep="grep --color=auto"
alias h="history"
alias hs="history | grep"

# Confirm
alias rm="rm -i"
alias mv="mv -i"

# Docker
alias do="sudo docker"
alias di="sudo docker images"
alias dps="sudo docker ps"
